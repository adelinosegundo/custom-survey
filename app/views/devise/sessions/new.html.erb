<div class="form-clarified-wrapper">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form form-clarified form-validate' }) do |f| %>
        <div class="form-header">
            <h1 class="form-header-logotype">Custom Survey</h1>
        </div>
		<div class="form-group">
			<%= f.email_field :email, autofocus: true, placeholder: "Username", class: "form-control", required: true %>
		</div>
		<div class="form-group">
			<%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control", required: true %>
		</div>
		<div class="form-buttons">
			<button class="btn btn-lg btn-purple" type="submit">Entrar</button>
		</div>
	<% end %>
</div>
